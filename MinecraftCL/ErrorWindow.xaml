<Window x:Class="MinecraftCL.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oh noes! An error occured." Closing="Window_Closing"
        Height="500" Width="500">
    <Grid Margin="0,0,0,0">
        <Label x:Name="errorTypeBox" Content="Looks like minecraft encountered an error. :( Here's what we know about it:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="validateMinecraftButton" Content="Validate Minecraft Files" Click="validateMinecraftButton_Click" HorizontalAlignment="Left" Margin="10,439,0,0" VerticalAlignment="Top" Width="220" RenderTransformOrigin="0.487,0.537"/>
        <Button x:Name="startMinecraft" Click="startMinecraft_Click" Content="Start Minecraft Again" HorizontalAlignment="Left" Margin="235,439,0,0" VerticalAlignment="Top" Width="250"/>
        <TextBox x:Name="errorMessageBox" IsReadOnly="True" HorizontalAlignment="Left" Height="393" Margin="10,41,0,0" TextWrapping="Wrap" Text="Well... This is awkward. We have no idea what happened." VerticalAlignment="Top" Width="472"/>
    </Grid>
</Window>
