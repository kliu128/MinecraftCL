<Window x:Class="MinecraftCL.DownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading in Progress..." WindowStyle="ToolWindow" 
        Closing="Window_Closing"
        Height="139.675" Width="300"
        x:Name="_this">
    <Grid Margin="0,0,0,4">

        <TextBlock x:Name="downloadFileDisplay" 
                   HorizontalAlignment="Left"
                   Margin="5,10,0,0" TextWrapping="Wrap" Text="You shouldn't be seeing this text." VerticalAlignment="Top" Height="86" Width="279"/>
        <ProgressBar x:Name="downloadProgressBar" Visibility="Hidden" HorizontalAlignment="Left" Height="15" Margin="5,80,0,-95" VerticalAlignment="Top" Width="284"/>
    </Grid>
</Window>
