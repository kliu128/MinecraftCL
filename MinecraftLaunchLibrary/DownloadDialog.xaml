<Window x:Class="MinecraftLaunchLibrary.DownloadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading in Progress..." WindowStyle="ToolWindow" 
        Closing="Window_Closing"
        Height="139.675" Width="300">
    <Grid Margin="0,0,0,194">
        <Label Content="Downloading files..." 
               HorizontalAlignment="Left" 
               Height="25" Margin="5,5,0,-30"
               VerticalAlignment="Top" 
               Width="279"/>

        <TextBlock x:Name="downloadFileDisplay" 
                   HorizontalAlignment="Left"
                   Margin="10,35,0,-75" TextWrapping="Wrap" Text="Dun dun daaaaah! [Downloading file goes here]" VerticalAlignment="Top" Height="40" Width="279"/>
        <ProgressBar x:Name="downloadProgressBar" Visibility="Hidden" HorizontalAlignment="Left" Height="15" Margin="5,80,0,-95" VerticalAlignment="Top" Width="284"/>
    </Grid>
</Window>
